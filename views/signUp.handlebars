<div class="container-box max-w-md mx-auto">
    <!-- Heading for the Sign Up section -->
    <h2 class="text-2xl font-bold mb-4">Sign Up</h2>
    <!-- Form for user registration -->
    <form class="form signup-form">
        <!-- Input field for username -->
        <div class="mb-3">
            <label for="username" class="block text-sm font-semibold mb-2">Username</label>
            <input type="text" class="w-full px-4 py-2 border rounded" id="username-signup" placeholder="Username" />
        </div>
        <!-- Input field for password -->
        <div class="mb-3">
            <label for="password" class="block text-sm font-semibold mb-2">Password must be 8 digits</label>
            <input type="password" class="w-full px-4 py-2 border rounded" id="password-signup" placeholder="Password" />
        </div>
        <!-- Button to submit the Sign Up form -->
        <div class="mb-3">
            <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-4 rounded">Sign Up</button>
        </div>
    </form>
    <div>
        <!-- Link to the Login page -->
        <a href="/login" class="text-blue-500">Login Instead</a>
    </div>
</div>

<script src="./js/signUp.js"></script>
