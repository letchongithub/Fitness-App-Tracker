<div class="container-box">
    <!-- Heading for the login section -->
    <h2 class="text-2xl font-bold mb-4">Login</h2>
    <!-- Form for user login -->
    <form class="form login-form">
        <!-- Input field for username -->
        <div class="mb-3">
            <label for="username" class="block text-sm font-semibold mb-2">Username</label>
            <input type="text" class="w-full px-4 py-2 border rounded" id="username-login" placeholder="Username" />
        </div>
        <!-- Input field for password -->
        <div class="mb-3">
            <label for="password" class="block text-sm font-semibold mb-2">Password must be 8 digits</label>
            <input type="password" class="w-full px-4 py-2 border rounded" id="password-login" placeholder="Password" />
        </div>
        <!-- Button to submit the login form -->
        <div class="mb-3">
            <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-4 rounded">Log In</button>
        </div>
        <div>
            <!-- Link to the Sign Up page -->
            <a href="/signUp" class="text-blue-500">Sign Up Instead</a>
        </div>
    </form>
</div>

<script src="./js/login.js"></script>
